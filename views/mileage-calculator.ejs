<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mileage Calculator - Royal Bike Club</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #6A1B4D, #A83279); /* Elegant gradient background */
        }

        .result {
            transition: opacity 0.5s ease;
        }

        /* Custom Styles for the Go Back Button */
        .go-back-btn {
            background-color: #007bff; /* Bootstrap Primary Color */
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 0.375rem; /* Tailwind's rounded-md */
            text-decoration: none;
            font-weight: 600;
            transition: background-color 0.3s ease;
            display: inline-flex; /* Center the icon */
            align-items: center;
        }

        .go-back-btn:hover {
            background-color: #0056b3; /* Darker shade for hover */
        }

        .go-back-icon {
            margin-right: 0.5rem; /* Space between icon and text */
        }
    </style>
</head>

<body class="min-h-screen flex items-center justify-center">

    <div class="container mx-auto px-4 py-12">
        <div class="flex items-center mb-6">
            <!-- Go Back Button -->
            <a href="javascript:history.back()" class="go-back-btn">
                <svg class="go-back-icon w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"></path>
                </svg>
                Go Back
            </a>
            <!-- Heading -->
            <h1 class="text-3xl font-bold text-white flex-1 text-center">Mileage Calculator</h1>
        </div>

        <div class="max-w-md mx-auto bg-white rounded-lg shadow-lg p-8">
            <form id="mileage-calculator-form" class="space-y-4">
                <div>
                    <label for="distance" class="block text-gray-700 font-semibold mb-2">Total Distance (in km)</label>
                    <input type="number" id="distance" name="distance" class="border border-gray-300 rounded-lg w-full p-3 focus:outline-none focus:ring-2 focus:ring-purple-600" placeholder="Enter total distance" required>
                </div>
                <div>
                    <label for="fuel" class="block text-gray-700 font-semibold mb-2">Fuel Consumed (in litres)</label>
                    <input type="number" id="fuel" name="fuel" class="border border-gray-300 rounded-lg w-full p-3 focus:outline-none focus:ring-2 focus:ring-purple-600" placeholder="Enter fuel consumed" required>
                </div>

                <button type="submit" class="w-full bg-purple-500 text-white font-semibold py-2 rounded-lg hover:bg-purple-600 transition duration-200">Calculate Mileage</button>
            </form>

            <div id="result" class="mt-6 hidden">
                <h2 class="text-2xl font-bold text-gray-800">Mileage Result</h2>
                <p id="mileage" class="text-xl text-gray-600"></p>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('mileage-calculator-form').addEventListener('submit', function (e) {
            e.preventDefault();

            const distance = parseFloat(document.getElementById('distance').value);
            const fuel = parseFloat(document.getElementById('fuel').value);

            // Calculate mileage
            const mileage = distance / fuel;

            // Display the result
            document.getElementById('mileage').innerText = `Mileage: ${mileage.toFixed(2)} km/l`;
            document.getElementById('result').classList.remove('hidden');
        });
    </script>
</body>

</html>
